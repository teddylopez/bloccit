<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<h2>Posts</h2>
<% if @user.posts.empty? %>
  <p><%= @user.name %> has not submitted any posts yet.</p>
<% else %>
  <%= render @user.posts %>
<% end %>

<h2>Comments</h2>
<% if @user.comments.empty? %>
  <p><%= @user.name %> has not commented on anything yet.</p>
<% else %>
  <%= render @user.comments %>
<% end %>

<h2>Favorites</h2>
<% if(@user.favorites.any?) %>
  <p><%= @user.name %> has not favorited any posts.</p>
<% else %>
  <%= render partial: "favorites/favorite", favorites: @user.favorites %>
<% end %>
